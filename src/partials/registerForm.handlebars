<form
  class="w-full md:max-w-sm md:mx-auto p-4 px-6 rounded-lg drop-shadow-lg bg-slate-800"
  action="/register"
  method="post"
>
  <h1 class="text-2xl font-bold text-white py-2 pb-4 px-4 shadow-xl">
    Create Your New Account
  </h1>
  <div class="md:flex flex-col justify-start mb-2">
    <div class="w-full md:w-1/3">
      <label
        class="block text-white md:text-left mb-1 md:mb-0 pr-4"
        for="email"
      >
        Email
      </label>
    </div>
    <div class="">
      <input
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white"
        id="email"
        type="email"
        name="email"
        placeholder="Email"
        autocomplete="off"
        autofill="off"
      />
    </div>
  </div>
  <div class="md:flex flex-col justify-start mb-2">
    <div class="md:w-1/3">
      <label
        class="block text-white md:text-left mb-1 md:mb-0 pr-4"
        for="password"
      >
        Password
      </label>
    </div>
    <div class="">
      <input
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white"
        id="password"
        type="password"
        name="password"
        placeholder="Password"
        autocomplete="off"
        autofill="off"
      />
    </div>
  </div>
  <div class="md:flex flex-col justify-start mb-2">
    <div class="w-full">
      <label
        class="block text-white md:text-left mb-1 md:mb-0 pr-4"
        for="passwordConfirm"
      >
        Confirm Password
      </label>
    </div>
    <div class="">
      <input
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white"
        id="passwordConfirm"
        type="password"
        name="passwordConfirm"
        placeholder="Confirm Password"
        autocomplete="off"
        autofill="off"
      />
    </div>
  </div>
  <blockquote class="px-2 my-1 border-s-4 border-red-300 dark:border-red-500">
    <p class="text-xs font-medium leading-relaxed text-white">{{error}}</p>
  </blockquote>
  <div class="md:flex flex-col justify-start mt-8">
    <div class="w-full">
      <button
        class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded cursor-pointer w-full"
        type="submit"
      >
        Register
      </button>
    </div>
  </div>
  <div class="md:flex flex-col justify-start mt-2">
    <div class="w-full">
      <a
        href="/#login"
        class="text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded cursor-pointer w-full"
      >
        Already have an account? Go to Login
      </a>
    </div>
  </div>
</form>