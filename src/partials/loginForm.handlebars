<div class="w-full h-[85vh] p-4 flex items-start justify-center">
  <div
    class="p-12 px-4 mt-12 rounded-lg border-2 border-gray-50 bg-slate-900"
    style="min-height: 300px;width:420px; max-width: 98%;"
  >
    <form class="w-full max-w-sm" action="/#login" method="post">
      <div class="md:flex flex-col justify-start mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-white md:text-left mb-1 md:mb-0 pr-4"
            for="email"
          >
            Email
          </label>
        </div>
        <div class="">
          <input
            class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white"
            id="email"
            type="email"
            name="email"
            placeholder="Email"
          />
        </div>
      </div>
      <div class="md:flex flex-col justify-start">
        <div class="md:w-1/3">
          <label
            class="block text-white md:text-left mb-1 md:mb-0 pr-4"
            for="password"
          >
            Password
          </label>
        </div>
        <div class="">
          <input
            class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white"
            id="password"
            type="password"
            name="password"
            placeholder="Password"
          />
        </div>
      </div>
      <div class="md:flex flex-col items-center mb-2">
        <div
          class=""
          style="height: 2rem; color: #b42d20;line-height:2rem;"
        >{{loginError}}</div>
        <div class="w-full">
          <button
            class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-full"
            type="submit"
          >
            Login
          </button>
        </div>
      </div>
    </form>
  </div>
</div>