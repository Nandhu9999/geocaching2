<form
  class="w-full md:max-w-sm md:mx-auto p-4 px-6 rounded-lg drop-shadow-lg bg-slate-800"
  action="/reset"
  method="post"
  autocomplete="off"
>
  <h1 class="text-2xl font-bold text-white py-2 pb-4 px-4 pl-0 shadow-xl">
    Password Reset
  </h1>
  <div class="md:flex flex-col justify-start mb-2">
    <div class="w-full pointer-events-none user-select-none">
      <label
        class="block text-white md:text-left mb-1 md:mb-0 pr-4"
        for="email"
      >
        Email
      </label>
    </div>
    <div class="">
      <input
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white opacity-50"
        id="email"
        type="email"
        name="email"
        placeholder="Email"
        autofill="off"
        autocomplete="false"
        disabled="true"
      />
    </div>
  </div>

  <div class="w-full">
    <div class="w-full mt-2">
      <label
        class="block text-white md:text-left mb-1 md:mb-0 pr-4"
        for="passwordOld"
      >
        Old Password
      </label>
    </div>
    <div class="">
      <input
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white"
        id="passwordOld"
        type="text"
        name="passwordOld"
        placeholder="Old Password"
        required="true"
        autocomplete="off"
        autofill="off"
      />
    </div>
  </div>

  <div class="md:flex flex-col justify-start mb-2">
    <div class="w-full">
      <label
        class="block text-white md:text-left mb-1 md:mb-0 pr-4"
        for="passwordNew"
      >
        New Password
      </label>
    </div>
    <div class="">
      <input
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white"
        id="passwordNew"
        type="text"
        name="passwordNew"
        required="true"
        placeholder="New Password"
        autocomplete="off"
        autofill="off"
      />
    </div>
  </div>
  {{> formError }}
  <div class="md:flex flex-col justify-start mt-8">
    <button
      class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-full cursor-pointer w-full"
      type="submit"
    >
      Reset Password
    </button>
  </div>
  <div class="md:flex flex-col justify-start mt-2">
    <a
      href="/#login"
      class="text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded cursor-pointer w-full"
    >
      Already have an account? Go to Login
    </a>
  </div>
</form>