<div
  id="sideBar"
  style="z-index:999"
  class="h-full w-[300px] transition-all fixed top-0 translate-x-[-300px] bg-gradient-to-r from-slate-800 via-slate-800 via-95% to-transparent to-95%"
>
  <div class="flex flex-col items-center justify-between h-full w-full">
    <div
      class="flex flex-col relative mt-2 p-4 pb-12 w-full questionBackgroundGradient rounded-e-lg border-black border-2 border-l-0"
    >
    <div class="flex flex-row">

      <div class="w-20 h-20 flex justify-center items-center bg-slate-700 rounded-full p-2">
        <img
          class="w-12 h-12 rounded-full"
          src="/assets/favicon.png"
          alt="Profile picture"
        />
      </div>
      <div class="select-none flex flex-col items-start justify-center ml-4">
        <h1
          style="text-shadow: 2px 2px #323232;"
          class="truncate text-xl font-bold text-gray-100"
        >AmritaTrees</h1>
        <h2
          class="truncate text-md font-bold text-gray-600"
        >@{{account.name}}</h2>
      </div>
      </div>
      <div class="flex flex-row gap-2 items-center justify-between bg-white absolute -bottom-8 w-10/12 p-2 rounded-lg drop-shadow-lg px-4">
      <div class="flex flex-row gap-2 items-center">

        <div><img
            style=""
            src="/assets/game/currency.png"
            class="nodrag h-7 aspect-square translate-y-1"
          /></div>
        <div class="flex flex-col justify-center">
          <span class="font-bold text-xl">{{#numberWithCommas account.score}}{{/numberWithCommas}}</span>
          <span class="text-gray-500">Points</span>
        </div>
      </div class="pr-4">
        <a href="/leaderboards" class=" p-2 rounded-full flex justify-center items-center">
          <img
            src="/assets/game/leaderboards.png"
            class="nodrag h-6 aspect-square translate-y-1"
          />
        </a>
      </div>
    </div>
    <div class="w-11/12 pr-4 py-2">

      {{!-- <a
        href="/leaderboards"
        style="color: #9f6c34;background-image: linear-gradient(25deg,#f9c04d,#fffa7c);"
        class="select-none flex niconne-regular justify-center items-center h-14 w-11/12 p-4 mx-auto relative capitalize text-3xl rounded-full border-2 border-black ring-2 ring-offset-2 ring-white active:translate-y-1 transition-all"
      >Leaderboards</a> --}}
    </div>
    <div class="w-11/12 pr-4 py-2">

      <br />

      <div class="flex flex-col mt-auto w-full pb-2">
        <a
          href="/admin"
          class="text-gray-400 font-bold hover:text-gray-100 px-4 py-2 border-gray-100 hover:border-l-4"
        >ADMIN</a>
        <div
          class="text-gray-400 hover:text-gray-100 px-4 pb-2 font-bold border-gray-100 hover:border-l-4 "
        >SETTINGS</div>
        {{> gameSettings }}
        <a
          href="/ "
          class="text-gray-400 font-bold hover:text-gray-100 px-4 py-2 border-gray-100 hover:border-l-4"
        >LOGOUT</a>
      </div>

    </div>
  </div>
</div>