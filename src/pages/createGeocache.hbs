<!DOCTYPE html>
<html lang="en">
  <head>
    {{> head }}
    <title>AmritaTrees | Create</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <script src="/js/app.js" type="module"></script>
  <script src="/js/createGeocache.js" type="module"></script>

<body class="w-screen h-screen relative bg-slate-800 overflow-y-auto overflow-x-hidden">
  <div id="TailwindRequiredStyles" class="hidden translate-x-[300px] w-8 h-8 aspect-square border-4 border-t-black-500 rounded-full animate-spin"></div>

  <div id="contentWrapper" style="width:110vw;" class="w-screen h-full relative transition-all">
    <div id="createGeocacheContainer" style="background:
  linear-gradient(135deg, #1E293B 25%, transparent 25%) -50px 0,
  linear-gradient(225deg, #1E293B 25%, transparent 25%) -50px 0,
  linear-gradient(315deg, #1E293B 25%, transparent 25%),
  linear-gradient(45deg, #1E293B 25%, transparent 25%);
background-size: 100px 100px;
background-color: #334155;width:100%;height:100%;transform:translateX(-5vw);">
        <div class="flex flex-col h-full w-full justify-between items-center py-20">
            <div id="videoContainer" class="w-96 h-96 rounded-full bg-red-500 gameIcon flex justify-center items-center">
              {{!-- <img style="width:95%;height:95%;border-radius:50%;border:2px solid black;" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="> --}}
              <video style="width:95%;height:95%;border-radius:50%;object-fit: cover;border:2px solid black;"></video>
              <img id="photo" style="display:none;width:95%;height:95%;border-radius:50%;border:2px solid black;" alt="Captured Photo"/>
            </div>
            <div id="statusBox" class="select-none font-bold text-gray-300 h-12 flex justify-center items-center "></div>
            <input id="geocacheNameInput" class="w-96 h-16 rounded-full p-3 px-6 text-xl font-bold text-gray-800 border-2 border-black border-b-8 outline-none mb-4" placeholder="Enter Tree Name"/>
            <div id="captureBtn" class="w-96 h-16 rounded-full questionBackgroundGradient flex justify-center items-center text-xl font-bold text-gray-800 select-none active:translate-y-1 transition-all border-2 border-black border-b-8">Capture New Tree</div>
        </div>
    </div>
    <div id="contentOverlay" style="z-index:999;width:100%;transform:translateX(-5vw);" class="h-screen absolute top-0 left-0 bg-black opacity-20 hidden"></div>
  </div>

  {{> gameNavbar}}

  {{> sideBar }}
</body>
</html>