<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8" />
  <link rel="icon" href="https://glitch.com/favicon.ico" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta http-equiv="ScreenOrientation" content="autoRotate:disabled">

  <title>{{seo.title}}</title>

  <!-- Meta tags for SEO and social sharing -->
  <link rel="canonical" href="{{seo.url}}">
  <meta name="description" content="{{seo.description}}">
  <meta property="og:title" content="{{seo.title}}">
  <meta property="og:type" content="article">
  <meta property="og:url" content="{{seo.url}}">
  <meta property="og:description" content="{{seo.description}}">
  <meta property="og:image" content="{{seo.image}}">
  <meta name="twitter:card" content="summary">

  <!-- Import the webpage's stylesheet -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/chat.css" />
  <link rel="stylesheet" href="/css/overlay.css" />

  <script>function $(x){return document.querySelector(x);}</script>
  <script type="module" src="/js/utils.js"></script>
  <script type="module" src="/js/authorization.js"></script>
  <script type="module" src="/js/chatscript.js"></script>
  <script type="module" src="/js/sidebarscript.js"></script>
  <script type="module" src="/js/socketClient.js"></script>

  <script type="module" src="/js/frameState.js"></script>


</head>

<body>
  <div id="container">
    <div class="sidebarLeft">
      <span class="title">Channels</span>
      <ul>
      </ul>
    </div>
    <main data-state="default">
      <header class="mainheader">
        <span class="menu" id="menuBtn">🍔</span>
        <span>header</span>
        <span class="users" id="usersBtn">👥</span>
      </header>
      
      <div class="maincontent">
        <div class="mountContainer"></div>
        <div class="chatlogs"></div>
      </div>

      <footer class="mainfooter">
        <div class="chatindication">
          <span class="loadingCircles"></span>
          <span class="indicationLabel"></span>
        </div>
        <div class="userinput">
          
          <div id="widget" class="">
            😋
            <dialog class="widgetDialog">
              <div>🚀</div>
              <div>🔦</div>
              <div>📸</div>
            </dialog>
          </div>

          <div id="textarea" contenteditable="true" spellcheck="false"></div>
          
          <div id="send">🚀</div>

        </div>
      </footer>

      <div class="overlayFrame hide"></div>
      <div class="overlayChatWindow hide">
        <div class="overlayHeader">
        <span class="expandOchat">🟦</span>
        <span>header</span>
        <span class="closeOchat">🇽</span>
        </div>
        
        <div class="overlayChatlogs">
          <div class="chatlogs2"></div>
        </div>
        
        <div class="overlayFooter">

          <div class="userinput">
            
            <div class="widget">😋</div>
            <div class="textarea" contenteditable="true" spellcheck="false"></div>
            <div class="send">🚀</div>

          </div>

        </div>
      </div>

    </main>
    <div class="sidebarRight">
      <span class="title">Members</span>
      <ul>
      </ul>
      <div class="profile">

      </div>
    </div>

  </div>

  <dialog id="authModal">
    <h1>Login</h1>
    <form>
      <label>
        Username:
        <input type="text" name="username">
      </label>

      <label>
        Passcode:
        <input type="password" name="password">
      </label>

      <button>submit</button>
    </form>
  </dialog>



</body>

</html>
